<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moviemania">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AccountActivity"></activity>
        <activity android:name=".SearchActivity" />
        <activity android:name=".CompanyActivity" />
        <activity android:name=".EpisodeDetailsActivity" />
        <activity android:name=".SeasonDetailsActivity" />
        <activity android:name=".PeopleDetailsActivity" />
        <activity android:name=".TVDetailsActivity" />
        <activity android:name=".DetailsActivity" />
        <activity
            android:name=".MovieActivity"/>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>